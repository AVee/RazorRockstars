<!DOCTYPE HTML>
<html>
<head>
<title>Dead Rockstars</title>
<link href="/stars/style.css" rel="stylesheet" />
<style type="text/css">
body {
    background: #FAA;
}
a {
    color: #a30;    
}
</style>
</head>
    <body>
        
        <div id="page">
            <div id="info">
                <h6>Rocking the grave...</h6>
                <p>
                    <a id="home" href="/rockstars"></a>
                    <a href="Content?format=text.bare">Markdown Only</a>
                </p>
            </div>

            <h1>@ViewBag.Title</h1>
            
            @Html.Partial("MenuDead")
        
            <div id="content">
                @RenderBody()
                <b class="clear"></b>
            </div>
            
            @Html.Partial("MenuAlive")

        </div>
        
        <div id="preview">
            @RenderSection("preview")
        </div>

    </body>
</html>
